<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">51</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <control type="group">
            <animation effect="fade" time="200">WindowOpen</animation>
            <animation effect="fade" time="200">WindowClose</animation>
            <include>CommonMediaPlayingBackground</include>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<include>FullscreenDimensions</include>
				<aspectratio>scale</aspectratio>
				<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
				<visible>!Skin.HasSetting(HideBackGroundFanart) + !IsEmpty(ListItem.Property(Fanart_Image))</visible>	
			</control>				
        </control>
        <control type="group">
            <include>Animation_OpenClose_Furniture</include>
            <control type="image">
                <posy>472</posy>
                <width>1920</width>
                <height>608</height>
                <texture>views/showcase_floor.png</texture>
                <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
            </control>
            <control type="image">
                <posy>-207</posy>
                <width>1920</width>
                <height>1080</height>
                <texture>common/bgcolor.png</texture>
                <animation effect="fade" start="100" end="80" time="40" condition="true">Conditional</animation>
                <animation effect="fade" end="100" time="440" delay="160">Visible</animation>
                <animation effect="fade" start="100" end="0" time="80">Hidden</animation>
                <visible>Skin.HasSetting(darkinfopaneve)</visible>
            </control>
            <control type="image">
                <posx>-105</posx>
                <width>696</width>
                <height>1080</height>
                <texture>views/showcase_vignette.png</texture>
                <colordiffuse>vignette</colordiffuse>
            </control>
            <control type="image">
                <posx>1329</posx>
                <width>696</width>
                <height>1080</height>
                <texture flipx="true">views/showcase_vignette.png</texture>
                <colordiffuse>vignette</colordiffuse>
            </control>
            <include>PanelSpot</include>
            <include>Neon_Floor</include>
        </control>
       <include>VideoExtras_Layout1</include>
     <!--  <include condition="!Skin.HasSetting(ClassicVideoExtra)">VideoExtras_Layout2</include>-->
        <control type="image">
            <posy>1012</posy>
            <width>1920</width>
            <height>72</height>
            <texture>views/showcase_gradient.png</texture>
        </control>
        <control type="group">
            <include>Animation_HideBreadCrumbs</include>
            <include>Breadcrumbs_BackBar</include>
            <include>BreadcrumbsContent</include>
            <control type="grouplist">
                <width>1920</width>
                <align>center</align>
                <aligny>center</aligny>
                <itemgap>10</itemgap>
                <orientation>horizontal</orientation>
                <visible>!Skin.HasSetting(ClassicTopBar)</visible>
                <animation effect="fade" time="320" delay="320">Visible</animation>
                <animation effect="fade" time="320">Hidden</animation>
            </control>
            <include>Breadcrumbs_Furniture</include>
			<control type="group">
				<posx>20</posx>
				<posy>1</posy>
				<width>800</width>
				<height>50</height>
				<animation type="WindowOpen" reversible="false">
					<effect type="fade" end="100" time="300" />
				</animation>
				<animation type="WindowClose" reversible="false">
					<effect type="fade" start="100" end="0" time="300" />
				</animation>				
			</control>			
        </control>
        <include>Furniture_NowPlayingWidget</include>
        <!---MEDIA MENU-->
        <control type="group" id="9000">
            <visible>!Skin.HasSetting(kioskmode)</visible>
            <animation type="Conditional" condition="Window.IsActive(1128) | Window.IsActive(1127)">
                <effect type="slide" end="-600" time="320" easing="in" tween="cubic" />
            </animation>
            <include>Media_Menu_Furniture</include>
            <control type="group">
                <include>Animation_MediaMenuSlide2</include>
                <control type="grouplist" id="9003">
                    <width>450</width>
                    <height>1080</height>
                    <orientation>vertical</orientation>
                    <scroll>true</scroll>
                    <onleft>51</onleft>
                    <onright>51</onright>
                    <onup>9003</onup>
                    <ondown>9003</ondown>
                    <onback>51</onback>
                   <control type="button" id="8">
                        <label>5</label>
                        <include>Objects_MediaMenuButtonAlt</include>
						<onclick>Addon.OpenSettings(script.videoextras)</onclick>
                    </control>
                   <control type="button" id="1601">
                        <label>$LOCALIZE[31383]</label>
                        <font>Font_Bold26_Caps</font>
                        <disabledcolor>$VAR[FontColorVar]</disabledcolor>
                        <include>Objects_MediaMenuButtonAlt</include>
                        <enable>no</enable>
                        <visible>!Skin.HasSetting(hideoptions) + Skin.HasSetting(DisableGlowbar)</visible>
                    </control>
                    <control type="radiobutton" id="1663">
                        <label>$LOCALIZE[31387]</label>
                        <include>Objects_MediaMenuButtonAlt</include>
                        <onclick>Skin.ToggleSetting(darkinfopaneve)</onclick>
                        <selected>Skin.HasSetting(darkinfopaneve)</selected>
                        <visible>!Skin.HasSetting(hideoptions) + Skin.HasSetting(DisableGlowbar)</visible>
                    </control>
                    <control type="radiobutton" id="1685">
                        <label>Enable Overlay on fanart</label>
                        <include>Objects_MediaMenuButtonAlt</include>
                        <onclick>Skin.ToggleSetting(OverlaySetting)</onclick>
                        <selected>Skin.HasSetting(OverlaySetting)</selected>
                        <visible>!Skin.HasSetting(hideoptions)</visible>
                    </control>					
                    <control type="button" id="1604">
                        <label>$LOCALIZE[31185]</label>
                        <font>Font_Bold26_Caps</font>
                        <disabledcolor>$VAR[FontColorVar]</disabledcolor>
                        <include>Objects_MediaMenuButtonAlt</include>
                        <enable>no</enable>
                    </control>
             <!--      <control type="button" id="1637">
                        <label>$LOCALIZE[31272]:</label>
                        <label2>[COLOR $VAR[FontColorVar]]$VAR[VideoExtraLayoutVar][/COLOR]</label2>
                        <include>Objects_MediaMenuButtonAlt</include>
                        <onclick>Skin.ToggleSetting(ClassicVideoExtra)</onclick>
                        <onclick>SetProperty(activewindow,vextra,home)</onclick>
                        <onclick>ActivateWindow(1141)</onclick>
                        <onclick>RunAddon(script.videoextras,display,"$INFO[ListItem.FilenameAndPath]")</onclick>
                    </control>-->
                    <control type="button" id="1603">
                        <label>$LOCALIZE[31176]</label>
                        <include>Objects_MediaMenuButtonAlt</include>
                        <enable>no</enable>
                    </control>
                    <control type="button" id="1664">
                        <label>31298</label>
                        <include>Objects_MediaMenuButtonAlt</include>
                        <onclick>ActivateWindow(1128)</onclick>
                    </control>
                </control>
                <include>QuickNavLabel</include>
            </control>
        </control>
        <control type="button" id="9000">
            <include>HiddenObject</include>
            <enable>Skin.HasSetting(kioskmode)</enable>
            <visible>Skin.HasSetting(kioskmode)</visible>
            <onfocus>SetFocus(50)</onfocus>
        </control>
        <control type="button">
            <include>HiddenObject</include>
            <visible>!Skin.HasSetting(kioskmode)</visible>
            <hitrect x="-1" y="0" w="50" h="1080" />
            <onfocus>SetFocus(9000)</onfocus>
        </control>
    </controls>
</window>