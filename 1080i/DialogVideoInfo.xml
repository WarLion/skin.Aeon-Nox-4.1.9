<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">8</defaultcontrol>
    <onload>ClearProperty(ActorFade)</onload>
    <onload>AlarmClock(ActorFade,SetProperty(ActorFade,true),00:02,silent)</onload>
    <onload condition="Skin.HasSetting(TVTunes.Enabled) + System.HasAddon(script.tvtunes)">XBMC.RunScript(script.tvtunes,backend=True)
</onload>	
    <onload condition="System.HasAddon(script.videolanguage) + [Container.Content(movies) | Container.Content(episodes)]">XBMC.RunScript(script.videolanguage,movieid=$INFO[ListItem.DBID])</onload>
	<onload condition="System.HasAddon(script.videoextras) + !Skin.HasSetting(Enable.videoextras)">XBMC.RunScript(script.videoextras,hasExtras,flag,"$INFO[ListItem.FilenameAndPath]")</onload>
    <onunload>ClearProperty(FanartZoom,movieinformation)</onunload>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="group">
		<include condition="!Skin.HasSetting(Alt_VideoInfo)">original_modvideoinfo</include>
          <!--  <include condition="!Skin.HasSetting(Alt_VideoInfo)">original_videoinfo</include>-->
			<include condition="Skin.HasSetting(Alt_VideoInfo)">Neurosis13_videoinfo</include>
        </control>
		<control type="button" id="61">
			<left>1870</left>
			<top>1050</top>
			<label></label>
			<texturefocus>defaulticons/DefaultScript2.png</texturefocus>
			<texturenofocus>defaulticons/DefaultScript.png</texturenofocus>
			<selectedcolor>$VAR[ColorDiffuseVar]</selectedcolor>
			<pulseonselect>yes</pulseonselect>
			<reverse>yes</reverse>
			<focusedcolor>white</focusedcolor>
			<subtype>page</subtype>
			<colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>			
			<onclick>ActivateWindow(1165)</onclick>
			<onclick>Dialog.Close(MovieInformation)</onclick>
			<width>30</width>
			<height>30</height>
			<onup>60</onup>
			<onleft>61</onleft>
			<onright>61</onright>
			<ondown>5055</ondown>	
			<animation effect="slide" start="1242,0" end="0,0" time="320" tween="quadratic" condition="Skin.HasSetting(Alt_VideoInfo)">WindowOpen</animation>
			<animation effect="slide" end="1242,0" time="320" tween="quadratic" condition="Skin.HasSetting(Alt_VideoInfo)">WindowClose</animation>		
			<animation effect="slide" start="0,0" end="-740,0" time="320" tween="quadratic" condition="!Skin.HasSetting(Alt_VideoInfo)">WindowOpen</animation>
			<animation effect="slide" end="-1242,0" time="320" tween="quadratic" condition="!Skin.HasSetting(Alt_VideoInfo)">WindowClose</animation>									
		</control>
    </controls>
</window>